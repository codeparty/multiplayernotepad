@import 'nib/vendor'
@import './home'
@import './list'

body
  margin: 0
  width: 100%
  height: 100%
  background: lightgrey

.container
  padding: 0 10px

.content
  padding: 80px 0

footer
  border-top: 1px solid #eee
  padding: 19px 0

.story textarea
  font-size: 20px;
  font-family: monaco;
  top: 0
  bottom: 0
  left: 0
  right: 0
  border-radius: 3px
  margin: 30px
  padding: 6px
  position: absolute

textarea.notgoing
  background-color: gray

.startbutton
  position:absolute
  top: 50%
  left: 50%
  width: 300px
  height: 200px
  margin: -100px 0px 0px -150px
  background: red

.startbutton.going
    display: none
  //.notgoing

.clock
  position: absolute
  top: 20px
  right: 20px
  background-color: rgb(212, 255, 184)
  padding: 19px
  font-size: 41px
  font-family: monospace
  border-radius: 5px
  border: 3px solid black

